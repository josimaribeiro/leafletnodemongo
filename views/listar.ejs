<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8" />
  <title>Listar Coordenadas</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>

<body class="p-4">
  <div class="container">
    <h1 class="mb-4">Coordenadas Cadastradas</h1>

    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nome</th>
          <th scope="col">Latitude</th>
          <th scope="col">Longitude</th>
          <th scope="col">Ação</th>
        </tr>
      </thead>
      <tbody>
        <% coordenadas.forEach(c=> { %>
          <tr>
            <td>
              <%= c.id %>
            </td>
            <td>
              <%= c.nome %>
            </td>
            <td>
              <%= c.latitude %>
            </td>
            <td>
              <%= c.longitude %>
            </td>
            <td>
              <a href="/coordenadas/show/<%= c.id %>" target="_blank" class="btn btn-sm btn-success">
                Ver no Mapa</a>
             
                <a href="https://www.google.com/maps?q=<%= c.latitude %>,<%= c.longitude %>" target="_blank"
                class="btn btn-sm btn-primary">
                Abrir no Maps</a><a href="/coordenadas/editar/<%= c.id %>" class="btn btn-sm btn-info text-white">
                Editar</a>

              <form action="/coordenadas/excluir/<%= c.id %>" method="POST" class="d-inline">
                <button type="submit" disabled class="btn btn-sm btn-danger"
                  onclick="return confirm('Tem certeza que deseja excluir esta coordenada?')">Excluir
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>

    <a href="/" class="btn btn-warning">Voltar ao Menu</a>
  </div>
</body>

</html>